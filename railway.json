{
  "$schema": "https://schema.up.railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "env": {
      "PYTHON_VERSION": "3.11.8",
      "PIP_ONLY_BINARY": ":all:"
    },
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": ["python311", "gcc", "alsa-lib", "ffmpeg", "libgl1", "libglib2.0"],
          "aptPkgs": ["libasound2", "ffmpeg", "libgl1-mesa-glx", "libglib2.0-0"]
        },
        "build": {
          "commands": ["pip list"]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "streamlit run main.py --server.address 0.0.0.0 --server.port $PORT --server.fileWatcherType none --browser.gatherUsageStats false --client.showErrorDetails false --client.toolbarMode minimal",
    "restartPolicy": "on-failure"
  }
}
